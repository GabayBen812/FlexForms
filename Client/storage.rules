rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /signatures/{fileName} {
      // Allow read/write access to signature files
      allow read, write: if true;
    }
    
    match /dynamic-fields/{fieldName}/{fileName} {
      // Allow read/write access to dynamic field files
      // Note: App-level authentication is handled by JWT tokens
      allow read, write: if true;
    }
    
    match /{allPaths=**} {
      // Keep other paths restricted
      allow read, write: if request.auth != null;
    }
  }
} 